<% layout("/layouts/boilerplate") %>


    <body>

        <div class="row mt-3">
            <div class="col-8 offset-3">
                <b>
                    <%= listing.title %>
                </b>
            </div>


            <div class="card col-6 offset-3 listing-card">
                <img src="<%=listing.images%>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <i>owned by :<b>
                               <%= listing.owner.username %>
                            </b></i>
                    </p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text"> $<%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>
                    </p>
                    <p class="card-text">
                        <%= listing.country %>
                    </p>
                </div>
            </div>
            <!-- <h2>Title: <%= listing.title %>
        </h2>
        <h3>description: <%= listing.description %>
        </h3>
        <h4>Price: $<%= listing.price.toLocaleString("en-IN") %>
        </h4>
        <h4>Location: <%= listing.location %>
        </h4> -->
            <br /> <br />
            <div class="btns mb-3">
                <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark  offset-5">Delete</button>
                </form>
            </div>
            <hr />
            <div class="col-8 offset-3 mb-3 ">
                <h4>Leave A Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-lable">Review</label>
                        <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-lable">Comment</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Comment should be valid
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>

                <hr />
                <h4>Reviews</h4>
                <div class="row">
                    <!-- <p><%= listing.reviews %></p> -->
                    <% for( let review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">hellow</h5>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="card-text">
                                    Rating: <%= review.rating %>
                                </p>
                            </div>
                            <form class="mb-3"
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="post">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>



    </body>